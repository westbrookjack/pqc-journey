{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with clang++ (C++20)",
        "type": "shell",
        "command": "/usr/bin/clang++",  // âœ… Force clang++
        "args": [
          "-std=c++20",
          "-Wall",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  